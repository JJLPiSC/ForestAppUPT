<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="#e1e6e7"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="Nuevo Dueño:"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv11"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="text"
        android:id="@+id/et1"
        android:layout_below="@+id/tv11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Contraseña de Autorización:"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv22"
        android:layout_below="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et22"
        android:layout_below="@+id/tv22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Intercambiar"
        android:id="@+id/btn_na"
        android:layout_below="@+id/et22"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>